extends base
block content
  
   section#properties.section-property
   div.container
      h1.content-center-x List Users
      a.content-a(href='#') Users Has Been Deleted
      svg.heading-box__icon
            use(xlink:href='/img/icons.svg#icon-trash')
   div.container-sm.d-grid.grid-center-v.u-margin-bottom-xl
      table.table.mt-4
         thead
            tr 
               th.scope.col #
               th.scope.col Name
               th.scope.col Email
               th.scope.col Role
            each user in users      
               -var n = 0
               tr      
                  td.scope.col  
                  td.scope.col=`${user.name}`
                  td.scope.col=`${user.email}` 
                  td.scope.col=`${user.role}`
                  td
                    a.btn-link-a(href='',data-toggle='modal',data-id='user.id',data-target='delete-modal') Delete
                       
      